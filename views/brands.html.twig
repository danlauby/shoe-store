<html>
<head>
    <meta charset="utf-8">
    <title>Shoe Store and Brand Finder</title>
    <link rel="stylesheet" href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
    <link rel="stylesheet" href="{{app.request.getbaseurl}}/css/styles.css">
</head>
<body>
    <h1>Shoe Store and Brand Finder</h1>
    <h2>Brands</h2>

    {% if brands is not empty %}
        <p>All Brands:</p>
        <ul>
            {% for brand in brands %}
                <li><a href="/brands/{{ brand.getId }}">{{ brand.getName }}</a></li>
            {% endfor %}
        </ul>
    {% endif %}

    <form action='/brands/create' method='post'>
        <label for='brand_name'>Brand Name:</label>
        <input id='brand_name' name='brand_name' type='text'>

        <button type='submit'>Add a New Brand:</button>
    </form>
    <form action='/brands/delete' method='post'>
        <button type='submit'>Clear all Brands</button>
    </form>

    <p><a href='/'>Home</a></p>
</body>
</html>
